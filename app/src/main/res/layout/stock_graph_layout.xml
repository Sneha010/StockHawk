<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.sam_chordas.android.stockhawk.ui.StockGraphActivity">

    <TextView
        android:id="@+id/txtStockTitle"
        style="@style/StockSymbolTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/stock_symbol_title_desc"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="15dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/stockBarChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/txtStockTitle"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/graph_desc" />

</RelativeLayout>